{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "产品"
    },
    "options": {
        "draftAndPublish": true
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "richtext"
        },
        "image": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images"
            ]
        },
        "sort_order": {
            "type": "integer",
            "default": 0
        },
        "language": {
            "type": "enumeration",
            "enum": [
                "zh",
                "en",
                "ru"
            ],
            "required": true,
            "default": "zh"
        }
    }
}
