{
    "kind": "collectionType",
    "collectionName": "contact_messages",
    "info": {
        "singularName": "contact-message",
        "pluralName": "contact-messages",
        "displayName": "留言"
    },
    "options": {
        "draftAndPublish": false
    },
    "attributes": {
        "name": {
            "type": "string",
            "required": true
        },
        "email": {
            "type": "email"
        },
        "phone": {
            "type": "string"
        },
        "message": {
            "type": "text",
            "required": true
        },
        "language": {
            "type": "enumeration",
            "enum": [
                "zh",
                "en",
                "ru"
            ],
            "default": "zh"
        }
    }
}
